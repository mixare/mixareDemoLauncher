<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/selectorsLayout">
	<TableLayout android:layout_width="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" android:layout_above="@+id/ImageButton01"
		android:layout_height="wrap_content" android:layout_margin="16px"
		android:id="@+id/selectorsTable">
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/selectorsRow01">
			<Button 
				android:textColor="@android:color/white" android:drawableTop="@drawable/icon"
				android:id="@+id/Button" android:text="CLICK ME"
				android:layout_height="80dip" android:layout_width="80dip"
				android:layout_marginLeft="8dip" android:layout_marginRight="8dip"
				android:layout_marginBottom="10dip" android:layout_marginTop="10dip"
				android:background="@drawable/buttons"></Button>
		</TableRow>
	</TableLayout>
<TextView android:layout_height="wrap_content" android:layout_below="@+id/selectorsTable" android:id="@+id/TextView01" android:layout_width="wrap_content" android:text="This launcher will get the current position of the phone and then launch mixare displaying four points. North, East, South and West. These points are not related to anything real you can find around, it is just to show how mixare works."></TextView>
<TextView android:layout_height="wrap_content" android:layout_below="@+id/TextView01" android:id="@+id/urlText" android:layout_width="wrap_content" android:text=""></TextView>
</RelativeLayout>
